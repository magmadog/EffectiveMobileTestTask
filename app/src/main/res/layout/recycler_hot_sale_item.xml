<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="12dp"
        app:cardCornerRadius="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_hot_sale"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/margin_standart_value">

            <ImageView
                android:id="@+id/iv_hot_sale_is_new"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_new"/>


            <TextView
                android:id="@+id/tv_hot_sale_title"
                android:layout_width="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_hot_sale_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btn_hot_sale"
                android:layout_width="98dp"
                android:layout_height="40dp"
                android:layout_marginTop="24dp"
                android:textColor="@color/dark_blue"
                android:backgroundTint="@color/white"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="11sp"
                android:text="@string/buy_now"
                android:shadowRadius="@integer/material_motion_duration_medium_1"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>